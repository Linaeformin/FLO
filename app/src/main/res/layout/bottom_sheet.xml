<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">

    <ImageView
        android:id="@+id/bottom_sheet_play_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/btn_editbar_play"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/bottom_sheet_play_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="듣기"
        android:textColor="@color/white"
        android:layout_marginStart="8dp"
        android:layout_marginTop="-5dp"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_play_iv"
        app:layout_constraintStart_toStartOf="@id/bottom_sheet_play_iv"/>

    <ImageView
        android:id="@+id/bottom_sheet_list_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/btn_editbar_addplaylist"
        android:layout_marginStart="65dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/bottom_sheet_play_iv" />
    <TextView
        android:id="@+id/bottom_sheet_list_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="재생목록"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/bottom_sheet_play_tv"
        app:layout_constraintBottom_toBottomOf="@id/bottom_sheet_play_tv"
        app:layout_constraintStart_toStartOf="@id/bottom_sheet_list_iv"/>

    <ImageView
        android:id="@+id/bottom_sheet_mylist_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/btn_editbar_mylist"
        android:layout_marginStart="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/bottom_sheet_list_iv" />
    <TextView
        android:id="@+id/bottom_sheet_mylist_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내 리스트"
        android:textColor="@color/white"
        android:layout_marginStart="-5dp"
        app:layout_constraintTop_toTopOf="@id/bottom_sheet_play_tv"
        app:layout_constraintBottom_toBottomOf="@id/bottom_sheet_play_tv"
        app:layout_constraintStart_toStartOf="@id/bottom_sheet_mylist_iv"/>

    <ImageView
        android:id="@+id/bottom_sheet_delete_iv"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/btn_editbar_delete"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/bottom_sheet_delete_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="삭제"
        android:textColor="@color/white"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toTopOf="@id/bottom_sheet_mylist_tv"
        app:layout_constraintEnd_toEndOf="parent"/>





</androidx.constraintlayout.widget.ConstraintLayout>